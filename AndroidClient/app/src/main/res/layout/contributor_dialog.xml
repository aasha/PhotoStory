<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <TextView
        android:text="@string/contribute_text"
        android:textSize="16sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:padding="20dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5dp"/>

    <EditText
        android:id="@+id/c_name"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:lines="1"
        android:hint="Name"
        android:textColor="@color/black"
        android:paddingBottom="5dp"
        android:background="@drawable/edit_text_theme"/>
    <EditText
        android:id="@+id/c_email"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="4dp"
        android:lines="1"
        android:padding="10dp"
        android:hint="Email id (required)"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:paddingBottom="5dp"
        android:background="@drawable/edit_text_theme"/>

    <EditText
        android:id="@+id/c_phone"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:lines="1"
        android:hint="Phone number"
        android:textColor="@color/black"
        android:inputType="phone"
        android:paddingBottom="5dp"
        android:background="@drawable/edit_text_theme"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_4"
        android:layout_marginTop="31dp"/>
    <!--<View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3399ff"
        android:layout_marginRight="3dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/yes_no_selector"
            android:id="@+id/contributor_cancel"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/gray"
                android:text="Cancel"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="sans-serif-light"/>
        </FrameLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_4"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/yes_no_selector"
            android:id="@+id/contributor_submit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:textSize="20sp"
                android:textColor="@color/app_blue"
                android:text="Submit"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </FrameLayout>


    </LinearLayout>
    <!--<View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3399ff"
        android:layout_marginRight="3dp"/>-->
</LinearLayout>