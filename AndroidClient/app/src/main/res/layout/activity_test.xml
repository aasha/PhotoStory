<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_complete"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


        <ScrollView
            android:background="@drawable/dim_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_details_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/bottom_container"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/test"
                    android:paddingTop="120dp"
                    android:layout_height="@dimen/image_layout_height">
                    <View android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/grey_5"
                        android:id="@+id/line1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="60dp"/>

                    <View android:layout_width="0.1dp"
                        android:layout_height="30dp"
                        android:background="@color/grey_5"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/line1"
                        android:id="@+id/line2"
                        android:layout_marginRight="60dp"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/text_place"
                        android:layout_below="@+id/line2"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_5"/>
                    <TextView android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_place"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/text_title"
                        android:textSize="17sp"
                        android:lineSpacingExtra="-4sp"
                        android:textColor="#31aef5"
                        android:layout_gravity="left"
                        android:maxLines="2"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/text_expert"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>
                    <ImageView android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/image_like"
                        android:src="@drawable/like"
                        android:layout_below="@+id/line2"
                        android:layout_marginRight="45dp"/>

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"

                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:id="@+id/like_count"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_alignLeft="@+id/image_like"
                        android:layout_below="@+id/image_like"/>

                    <com.pixtory.app.views.SlantView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/like_count"
                        android:id="@+id/slant_view"
                        android:visibility="visible"/>
                </RelativeLayout>


                <LinearLayout android:id="@+id/pic_story_layout" android:padding="0dp"
                android:layout_width="match_parent" android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_below="@+id/test"
                android:layout_height="wrap_content"

                android:background="@color/white" />



                <include
                    layout="@layout/story_view_layout"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/pic_story_layout"></include>
            </RelativeLayout>

        </ScrollView>




