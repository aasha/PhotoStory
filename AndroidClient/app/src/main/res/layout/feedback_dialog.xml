<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_translucent">
    <TextView
        android:text="Feedback"
        android:textSize="25sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="center"
        android:textColor="@color/app_blue"
        android:contentDescription="@string/app_name"
        android:fontFamily="sans-serif"/>
    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_blue"
        android:layout_marginRight="3dp"/>

    <EditText
        android:id="@+id/feedback_text"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:lines="6"
        android:hint="Description"
        android:fontFamily="sans-serif"
        android:textColor="@color/app_blue"
        style="@style/EditTextCustom" />

    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_blue"
        android:layout_marginRight="3dp"/>
    <!--<View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3399ff"
        android:layout_marginRight="3dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/yes_no_selector"
            android:id="@+id/feedback_cancel"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/blue_cross"
                android:layout_marginLeft="67dp"
                android:id="@+id/wallpaper_no"/>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_blue"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/yes_no_selector"
            android:id="@+id/feedback_send">

            <ImageView
                android:layout_width="49dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/right_arrow"
                android:layout_marginLeft="53dp"
                android:id="@+id/wallpaper_yes"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>