<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/gradient"
        android:id="@+id/profile_frame">

        <FrameLayout  android:padding="0dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@null">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/blur_person_image"/>

            <com.pixtory.app.views.CircularImageView
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="149dp"
                android:layout_height="149dp"
                android:alpha="0.4"
                android:id="@+id/person_image_boarder"/>

            <com.pixtory.app.views.CircularImageView
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:id="@+id/person_image"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="11dp"
                android:id="@+id/back_click">

                <ImageView android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="11dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/back_img"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom">


                <TextView android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="23dp"
                    android:id="@+id/person_name"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:alpha="1"
                    android:text=""/>
                <TextView android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="23dp"
                    android:layout_below="@+id/person_name"
                    android:layout_marginTop="2dp"
                    android:id="@+id/person_desc"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text=""/>

                <TextView android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/person_follow"
                    android:textAlignment="center"
                    android:text="@string/follow"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:alpha="1"
                    android:background="@drawable/back_rectangle"
                    android:fontFamily="sans-serif-light"/>



            </RelativeLayout>

=
            <com.pixtory.app.views.SlantViewP
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/person_desc"
                android:id="@+id/slant_view"
                android:layout_gravity="bottom"/>


        </FrameLayout>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@color/profile_screen_background"/>

</LinearLayout>
