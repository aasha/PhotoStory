
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/layout_complete"
        android:background="@drawable/gradient"
        android:visibility="visible"
             tools:context="com.pixtory.app.fragments.MainFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/app_blue"
            android:visibility="gone"
            android:textSize="20sp"
            android:id="@+id/loading_text"
            android:gravity="center"
            android:text=""/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_main"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.pixtory.app.views.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/image_details_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/bottom_container"
                android:minHeight="700dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/like_layout"
                    android:background="@drawable/dim_background"
                    android:paddingTop="@dimen/image_layout_padding_top"
                    android:layout_height="@dimen/image_layout_height">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editor's pick"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/editor_pick_text"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="11sp"/>

                        <View android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/grey_5"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="60dp"
                            android:id="@+id/main_separator"
                            android:layout_below="@+id/editor_pick_text"/>
                        <View android:layout_width="0.1dp"
                            android:layout_height="30dp"
                            android:background="@color/grey_5"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:layout_below="@+id/editor_pick_text"
                            android:id="@+id/vertical_line"/>
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text_place"
                            android:text="RAJASTHAN INDIA"
                            android:textSize="11dp"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_5"
                            android:layout_below="@+id/main_separator"/>
                        <TextView android:layout_width="@dimen/image_detail_width"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_place"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text_title"
                            android:textSize="15dp"
                            android:textAllCaps="true"
                            android:text="RAJASTHAN INDIA IN Q NUTSHELL INDIA BAGALORE"
                            android:textColor="@color/app_blue"
                            android:layout_gravity="left"
                            android:maxLines="1"/>
                    
                    <TextView
                        android:layout_width="@dimen/image_detail_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:text="An attempt to bore well accidentally turned into an eternal natural geyser"
                        android:maxLines="2"
                        android:textSize="12dp"
                        android:id="@+id/picture_summary"
                        android:layout_below="@+id/text_title"
                        android:textColor="#ffffff"
                        />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-thin"
                            android:layout_below="@+id/picture_summary"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text_expert"
                            android:text="sonali kakrayne"
                            android:maxLines="1"
                            android:textSize="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/white"/>
                        <ImageView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/image_like"
                            android:src="@drawable/like"
                            android:layout_below="@id/vertical_line"
                            android:layout_marginRight="45dp"/>

                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="2344"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:id="@+id/like_count"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:paddingBottom="10dp"
                            android:layout_alignLeft="@+id/image_like"
                            android:layout_below="@+id/image_like"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:id="@+id/swipe_up_sign"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:visibility="invisible"
                            android:layout_alignParentBottom="true"
                            android:text="Swipe Up" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="170dp"
                        android:layout_below="@+id/swipe_up_sign"
                        android:src="@drawable/up_arrow"
                        android:scaleType="fitXY"
                        android:gravity="center_horizontal"
                        android:id="@+id/swipe_up_arrow"
                        android:layout_marginTop="45dp"/>

                    <com.pixtory.app.views.SlantView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/slant_view"
                        android:layout_marginTop="35dp"
                        android:layout_below="@+id/like_count"
                        android:visibility="visible"/>

                    </RelativeLayout>

                <android.support.v4.widget.NestedScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/pic_story_layout" android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="-15dp"
                    android:visibility="visible"
                    android:layout_below="@+id/like_layout"
                    android:overScrollMode="never"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:background="@color/transparent">
S

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/slant_view"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:id="@+id/content_layout">

                        </LinearLayout>


                </android.support.v4.widget.NestedScrollView>

                <!--<include android:layout="@layout/story_view_layout"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_below="@+id/slant_view"/>-->

            </RelativeLayout>

        </com.pixtory.app.views.ObservableScrollView>

    <!--COMMENT SHARE LAYOUT-->

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/comment_share_ll"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/btnComment"
        android:background="@color/grey_5"
        android:layout_height="match_parent"
        android:gravity="center"

        android:layout_weight="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/comment" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:textColor="@color/grey_1"
            android:text="COMMENT"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/btnShare"
        android:background="@color/grey_5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:id="@+id/share_img"
            android:src="@drawable/share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:textColor="@color/grey_1"
            android:text="SHARE"/>

        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:id="@+id/story_back_click">

        <ImageView android:layout_width="22dp"
            android:layout_height="15dp"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/story_back_img"
            android:layout_alignParentRight="true"
            android:src="@drawable/back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/wallpaper_settings"
        android:layout_gravity="right"
        android:visibility="visible">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/wallpaper_menu_icon"/>
    </LinearLayout>



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postBtn_ll"
        android:gravity="center"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:background="@color/app_blue"
            android:textColor="#b3ffffff"
            android:id="@+id/postComment"
            android:text="Post A Comment"
            android:layout_marginBottom="6dp"
            android:layout_weight="0.45" />

    </LinearLayout>

</FrameLayout>



